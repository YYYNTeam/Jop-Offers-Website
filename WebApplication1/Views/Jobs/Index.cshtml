@model IEnumerable<Jop_Offers_Website.Models.Job>

@{
    ViewBag.Title = "Jobs";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<h2>Jobs</h2>

<p>
    @Html.ActionLink("Create a new job", "Create")
</p>
<table class="table table-stripped table-bordered table-hover">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Category.CategoryName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.JobTitle)
        </th>
        <th>
            @Html.Raw(HttpUtility.HtmlDecode(@Html.DisplayNameFor(model => model.JobContent).ToString()))
        </th>
        <th>
            @Html.DisplayNameFor(model => model.JobImg)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Category.CategoryName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.JobTitle)
        </td>
        <td>
            @Html.Raw(HttpUtility.HtmlDecode(@Html.DisplayFor(modelItem => item.JobContent).ToString()))
        </td>
        <td>
            <img src="~/Uploads/@Html.DisplayFor(modelItem => item.JobImg)"
                 class="thumbnail" style="width:48px; height:48px;" />
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>
    </tr>
}
</table>
