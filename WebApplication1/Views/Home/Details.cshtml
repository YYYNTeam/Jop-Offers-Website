@model Jop_Offers_Website.Models.Job

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<h2>Job details</h2>

<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Category.CategoryName)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Category.CategoryName)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.JobTitle)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.JobTitle)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.JobContent)
        </dt>

        <dd>
            
            @Html.Raw(HttpUtility.HtmlDecode(@Html.DisplayFor(model => model.JobContent).ToString()))
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.JobImg)
        </dt>

        <dd>
            <img src="~/Uploads/@Html.DisplayFor(model => model.JobImg)"
                 class="thumbnail" style="width:128px; height:128px;" />
        </dd>


    </dl>
</div>
<p>
    @Html.ActionLink("Apply for this job", "Apply", new { id = Model.Id }, new { @class = "btn btn-success" }) |
    @Html.ActionLink("Back to home page", "Index", new { @class = "btn btn-default" })
</p>
